<%- include ../partials/header.ejs %>
<%- include ../partials/mainnav.ejs %>
<%- include ../partials/maincontent.ejs %>

<!-- Create Content-->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            
            <form class="form" method="POST" id="surveyForm">
                <div class="form-group">
                  <label for="surveyTitleTextField">Enter Title of Survey</label>
                  <input type="text" class="form-control" id="surveyTitleTextField" 
                  placeholder="Enter Survey's Name" name="surveyTitle">
                </div>
                <div class="form-group">
                  <label for="question1TextField">Enter Question 1</label>
                  <input type="text" class="form-control" id="question1TextField" 
                  placeholder="Enter Question 1" name="question1">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" 
                    name="q1option1" id="examplecheckboxs1" 
                    value="q1option1">
                    <input type="text" class="form-control" id="option1TextField" 
                  placeholder="Enter Option 1" name="q1option1">
                    <label class="form-check-label" for="examplecheckboxs1">
                    </label>
                </div>
                
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" 
                    name="q1option2" id="examplecheckboxs2" 
                    value="q1option2">
                    <input type="text" class="form-control" id="option1TextField" 
                  placeholder="Enter Option 2" name="q1option2">
                    <label class="form-check-label" for="examplecheckboxs2">
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" 
                    name="q1option3" id="examplecheckboxs3" 
                    value="q1option3">
                    <input type="text" class="form-control" id="option3TextField" 
                  placeholder="Enter Option 3" name="q1option3">
                    <label class="form-check-label" for="examplecheckboxs3">
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" 
                    name="q1option4" id="examplecheckboxs4" 
                    value="q1option4">
                    <input type="text" class="form-control" id="option1TextField" 
                  placeholder="Enter Option 4" name="q1option4">
                    <label class="form-check-label" for="examplecheckboxs4">
                    </label>
                </div> 

                
              </form>
              <span onclick="addFieldFunction()" class="btn btn-primary btn-lg" id="addOneMore">
                Add One More
                </span>
                <br><br>

                <button class="btn btn-primary" type ="submit">
                    <i class="far fa-edit"> Generate Survey</i>
                </button>
    
                <a href="/survey" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>

              
        </div>
    </div>
</div>

